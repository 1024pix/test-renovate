{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    ":preserveSemverRanges",
    ":semanticCommits",
    ":separateMultipleMajorReleases",
    "local>1024pix/test-renovate//presets/scalingo-addon-datasources",
    "local>1024pix/test-renovate//presets/scalingo-postgres-custom-manager",
    "local>1024pix/test-renovate//presets/scalingo-redis-custom-manager",
    "local>1024pix/test-renovate//presets/disable-automerge-and-docker-datasource-for-postgres-and-redis"
  ],
  "prConcurrentLimit": 5,
  "labels": ["dependencies"],
  "minimumReleaseAge": "7 days",
  "commitMessagePrefix": "[BUMP]",
  "rebaseWhen": "never",
  "schedule": "every 1 hour every weekday",
  "configMigration": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["lockFileMaintenance"],
      "addLabels": ["auto-bump", ":rocket: Ready to Merge"],
      "automerge": true
    },
    {
      "matchPackageNames": ["/^@1024pix//", "/^(node|cimg/node)$/"],
      "matchUpdateTypes": ["minor", "patch"],
      "addLabels": ["auto-bump", ":rocket: Ready to Merge"],
      "automerge": true
    }
  ]
}

